<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>New Story ¬∑ Only Scrubs</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      :root {
        --bg: #f8fafc; --card: #ffffff; --text: #1e293b; --border: #e2e8f0;
        --primary: #2563eb; --input-bg: #ffffff;
      }
      @media (prefers-color-scheme: dark) {
        :root {
          --bg: #0f172a; --card: #1e293b; --text: #f1f5f9; --border: #334155;
          --primary: #3b82f6; --input-bg: #0f172a;
        }
      }

      body {
        margin: 0;
        font-family: system-ui, -apple-system, sans-serif;
        background: var(--bg);
        color: var(--text);
        transition: background 0.3s;
      }

      header {
        padding: 16px 20px;
        background: var(--card);
        border-bottom: 1px solid var(--border);
      }
      header a { text-decoration: none; color: var(--text); font-weight: 700; }

      main { max-width: 680px; margin: 40px auto; padding: 0 16px; }

      .card {
        background: var(--card);
        border-radius: 20px;
        padding: 28px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        border: 1px solid var(--border);
      }

      h1 { margin-top: 0; font-size: 1.5rem; }
      .desc { color: #64748b; margin-bottom: 24px; line-height: 1.5; }

      .field { margin-bottom: 20px; display: flex; flex-direction: column; }
      .label { font-size: 0.9rem; font-weight: 600; margin-bottom: 8px; color: var(--text); }

      input, textarea, select {
        padding: 12px;
        border-radius: 12px;
        border: 1px solid var(--border);
        background: var(--input-bg);
        color: var(--text);
        font-family: inherit;
        font-size: 1rem;
        outline: none;
        transition: border-color 0.2s;
      }
      input:focus, textarea:focus, select:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 2px rgba(37, 99, 235, 0.1);
      }

      textarea { min-height: 150px; resize: vertical; }

      .btn-primary {
        background: var(--primary);
        color: white;
        border: none;
        padding: 14px;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        width: 100%;
        margin-top: 10px;
      }
      .btn-primary:disabled { opacity: 0.7; cursor: wait; }

      .back { display: block; text-align: center; margin-top: 20px; color: #64748b; text-decoration: none; font-size: 0.9rem; }
      .error { color: #ef4444; margin-top: 12px; text-align: center; }
    </style>
  </head>
  <body>
    <header><a href="/">Only Scrubs</a></header>
    <main>
      <div class="card">
        <h1>Share your story</h1>
        <p class="desc">A safe space to vent, share joy, or ask for advice. Fully anonymous.</p>

        <form id="storyForm">
          <div class="field">
            <span class="label">Category</span>
            <select name="category">
              <option value="General">General</option>
              <option value="Vent">Vent üò§</option>
              <option value="Happy">Happy Moment ‚ú®</option>
              <option value="Advice">Advice Needed ü§ù</option>
              <option value="Crazy">Crazy Patient Story üöë</option>
            </select>
          </div>

          <div class="field">
            <span class="label">Name (Optional)</span>
            <input type="text" name="name" placeholder="Anonymous Nurse" />
          </div>

          <div class="field">
            <span class="label">Your Story</span>
            <textarea name="text" required placeholder="Type here..."></textarea>
          </div>

          <div class="field">
            <span class="label">Attachment (Optional)</span>
            <input type="file" name="file" accept="image/*,video/*,audio/*" />
          </div>

          <button type="submit" class="btn-primary">Post Story</button>
          <div id="error" class="error"></div>
        </form>
        <a href="/stories" class="back">Cancel</a>
      </div>
    </main>

    <script>
      const form = document.getElementById("storyForm");
      const errorDiv = document.getElementById("error");
      const btn = form.querySelector("button");

      form.onsubmit = async (e) => {
        e.preventDefault();
        btn.disabled = true;
        btn.textContent = "Posting...";
        errorDiv.textContent = "";

        try {
          const res = await fetch("/api/stories", {
            method: "POST",
            body: new FormData(form)
          });
          if (!res.ok) throw new Error();
          window.location.href = "/stories";
        } catch (err) {
          errorDiv.textContent = "Failed to post. File might be too large.";
          btn.disabled = false;
          btn.textContent = "Post Story";
        }
      };
    </script>
  </body>
</html>
