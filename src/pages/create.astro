<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Share your story · Only Scrubs</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <style>
      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        background: #f7f9fc;
        margin: 0;
        padding: 0;
      }

      header {
        padding: 16px 24px;
        background: #ffffff;
        border-bottom: 1px solid #e5e7eb;
      }

      header a {
        text-decoration: none;
        color: #111827;
        font-weight: 600;
      }

      main {
        max-width: 720px;
        margin: 40px auto;
        padding: 0 16px;
      }

      .card {
        background: #ffffff;
        border-radius: 12px;
        padding: 24px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
      }

      h1 {
        margin-top: 0;
        margin-bottom: 8px;
      }

      p {
        color: #6b7280;
      }

      .field {
        margin-top: 16px;
        display: flex;
        flex-direction: column;
      }

      .field span {
        font-size: 14px;
        margin-bottom: 4px;
        color: #374151;
      }

      input[type="text"],
      textarea {
        padding: 10px;
        font-size: 15px;
        border-radius: 8px;
        border: 1px solid #d1d5db;
        font-family: inherit;
      }

      textarea {
        min-height: 140px;
        resize: vertical;
      }

      input[type="file"] {
        margin-top: 8px;
      }

      button {
        margin-top: 20px;
        background: #2563eb;
        color: #ffffff;
        border: none;
        padding: 12px 18px;
        border-radius: 10px;
        font-size: 15px;
        cursor: pointer;
      }

      button:disabled {
        opacity: 0.6;
        cursor: not-allowed;
      }

      .error {
        margin-top: 12px;
        color: #b91c1c;
        font-size: 14px;
      }

      .back {
        display: inline-block;
        margin-top: 16px;
        font-size: 14px;
      }
    </style>
  </head>

  <body>
    <header>
      <a href="/">Only Scrubs</a>
    </header>

    <main>
      <div class="card">
        <h1>Share your story</h1>
        <p>Write as much or as little as you want. Posting is anonymous.</p>

        <form id="storyForm" enctype="multipart/form-data">
          <div class="field">
            <span>Name (optional)</span>
            <input
              type="text"
              name="name"
              placeholder="Leave blank to post anonymously"
            />
          </div>

          <div class="field">
            <span>Your story</span>
            <textarea
              name="text"
              placeholder="Share your experience…"
              required
            ></textarea>
          </div>

          <div class="field">
            <span>Optional attachment</span>
            <input type="file" name="file" />
          </div>

          <button type="submit">Post story</button>
          <div class="error" id="error"></div>
        </form>

        <a class="back" href="/stories">← Back to stories</a>
      </div>
    </main>

    <script>
      const form = document.getElementById("storyForm");
      const errorBox = document.getElementById("error");
      const button = form.querySelector("button");

      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        errorBox.textContent = "";
        button.disabled = true;

        const formData = new FormData(form);

        try {
          const res = await fetch("/api/stories", {
            method: "POST",
            body: formData
          });

          if (!res.ok) {
            throw new Error("Failed to post story");
          }

          window.location.href = "/stories";
        } catch (err) {
          errorBox.textContent =
            "Something went wrong. Please try again.";
          button.disabled = false;
        }
      });
    </script>
  </body>
</html>
