<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Share your story · Only Scrubs</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <style>
      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        background: #f7f9fc;
        margin: 0;
        padding: 0;
      }

      header {
        padding: 16px 24px;
        background: #ffffff;
        border-bottom: 1px solid #e5e7eb;
      }

      header a {
        text-decoration: none;
        color: #111827;
        font-weight: 600;
      }

      main {
        max-width: 720px;
        margin: 40px auto;
        padding: 0 16px;
      }

      .card {
        background: #ffffff;
        border-radius: 12px;
        padding: 24px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
      }

      h1 {
        margin-top: 0;
        margin-bottom: 8px;
      }

      p {
        color: #6b7280;
      }

      .field {
        margin-top: 16px;
        display: flex;
        flex-direction: column;
      }

      .field span {
        font-size: 14px;
        margin-bottom: 4px;
        color: #374151;
      }

      input[type="text"],
      textarea {
        padding: 10px;
        font-size: 15px;
        border-radius: 8px;
        border: 1px solid #d1d5db;
        font-family: inherit;
      }

      textarea {
        min-height: 140px;
        resize: vertical;
      }

      input[type="file"] {
        margin-top: 8px;
      }

      button {
        margin-top: 20px;
        background: #2563eb;
        color: #ffffff;
        border: none;
        padding: 12px 18px;
        border-radius: 10px;
        font-size: 15px;
        cursor: pointer;
      }

      button:disabled {
        opacity: 0.6;
        cursor: not-allowed;
      }

      .error {
        margin-top: 12px;
        color: #b91c1c;
        font-size: 14px;
      }

      .back {
        display: inline-block;
        margin-top: 16px;
        font-size: 14px;
      }

      .char-info {
        margin-top: 6px;
        font-size: 13px;
        color: #6b7280;
      }

      .extend-btn {
        margin-top: 8px;
        background: #e5e7eb;
        color: #111827;
      }
    </style>
  </head>

  <body>
    <header>
      <a href="/">Only Scrubs</a>
    </header>

    <main>
      <div class="card">
        <h1>Share your story</h1>
        <p>Write as much or as little as you want. Posting is anonymous.</p>

        <form id="storyForm" enctype="multipart/form-data">
          <div class="field">
            <span>Name (optional)</span>
            <input
              type="text"
              name="name"
              placeholder="Leave blank to post anonymously"
            />
          </div>

          <div class="field">
            <span>Your story</span>
            <textarea
              id="storyText"
              name="text"
              placeholder="Share your experience…"
              required
            ></textarea>

            <!-- NEW: character counter -->
            <div class="char-info">
              <span id="charCount">0</span> /
              <span id="charLimit">1000</span>
            </div>

            <!-- NEW: extend button -->
            <button
              type="button"
              id="extendBtn"
              class="extend-btn"
              style="display:none"
            >
              Extend to 1500 characters
            </button>
          </div>

          <div class="field">
            <span>Optional attachment</span>
            <input type="file" name="file" />
          </div>

          <button type="submit">Post story</button>
          <div class="error" id="error"></div>
        </form>

        <a class="back" href="/stories">← Back to stories</a>
      </div>
    </main>

    <script>
      /* ===== EXISTING LOGIC (UNCHANGED) ===== */
      const form = document.getElementById("storyForm");
      const errorBox = document.getElementById("error");
      const submitButton = form.querySelector('button[type="submit"]');

      /* ===== NEW: CHARACTER LIMIT LOGIC ===== */
      const textarea = document.getElementById("storyText");
      const charCount = document.getElementById("charCount");
      const charLimitEl = document.getElementById("charLimit");
      const extendBtn = document.getElementById("extendBtn");

      let maxChars = 1000;

      textarea.addEventListener("input", () => {
        if (textarea.value.length > maxChars) {
          textarea.value = textarea.value.slice(0, maxChars);
        }

        charCount.textContent = textarea.value.length;

        if (textarea.value.length >= 1000 && maxChars === 1000) {
          extendBtn.style.display = "inline-block";
          charCount.style.color = "#b45309";
        } else {
          charCount.style.color = "#6b7280";
        }
      });

      extendBtn.addEventListener("click", () => {
        maxChars = 1500;
        charLimitEl.textContent = "1500";
        extendBtn.style.display = "none";
        charCount.style.color = "#6b7280";
      });

      /* ===== EXISTING SUBMIT HANDLER (UNCHANGED) ===== */
      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        errorBox.textContent = "";
        submitButton.disabled = true;

        const formData = new FormData(form);

        try {
          const res = await fetch("/api/stories", {
            method: "POST",
            body: formData
          });

          if (!res.ok) {
            throw new Error("Failed to post story");
          }

          window.location.href = "/stories";
        } catch (err) {
          errorBox.textContent =
            "Something went wrong. Please try again.";
          submitButton.disabled = false;
        }
      });
    </script>
  </body>
</html>
