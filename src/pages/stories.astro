---
export const prerender = false;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Stories · Only Scrubs</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <style>
      body {
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        background: #f6f8fa;
        color: #1f2937;
      }

      header {
        background: white;
        border-bottom: 1px solid #e5e7eb;
        padding: 16px 24px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      header a {
        text-decoration: none;
        color: #111827;
        font-weight: 600;
      }

      .actions {
        display: flex;
        align-items: center;
        gap: 12px;
      }

      .admin-badge {
        font-size: 12px;
        background: #dcfce7;
        color: #166534;
        padding: 4px 8px;
        border-radius: 6px;
      }

      .admin-btn {
        background: #111827;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 12px;
        cursor: pointer;
      }

      main {
        max-width: 860px;
        margin: 40px auto;
        padding: 0 16px;
      }

      .story {
        background: white;
        border-radius: 20px;
        padding: 24px;
        margin-bottom: 24px;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.06);
      }

      .story.hidden {
        opacity: 0.55;
      }

      .meta {
        font-size: 13px;
        color: #6b7280;
        margin-bottom: 8px;
      }

      .name {
        font-weight: 600;
        color: #111827;
      }

      .timestamp {
        margin-left: 6px;
      }

      .text {
        margin: 14px 0;
        line-height: 1.6;
        white-space: pre-wrap;
      }

      .media img,
      .media video {
        max-width: 100%;
        border-radius: 14px;
        margin-top: 14px;
      }

      .media audio {
        width: 100%;
        margin-top: 14px;
      }

      .story-footer {
        margin-top: 18px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .view {
        font-size: 14px;
        color: #2563eb;
        font-weight: 500;
        text-decoration: none;
      }

      .admin-actions {
        display: flex;
        gap: 10px;
      }

      .hide-btn {
        background: #f59e0b;
        border: none;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 12px;
        cursor: pointer;
      }

      .delete-btn {
        background: #dc2626;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 12px;
        cursor: pointer;
      }

      .hidden-label {
        font-size: 12px;
        color: #b91c1c;
        margin-bottom: 8px;
      }

      .empty {
        text-align: center;
        color: #6b7280;
        margin-top: 80px;
      }
    </style>
  </head>

  <body>
    <header>
      <a href="/">Only Scrubs</a>

      <div class="actions">
        <span id="adminBadge" class="admin-badge" style="display:none;">
          Admin mode
        </span>
        <button id="adminBtn" class="admin-btn">Admin</button>
        <a href="/create">Share your story</a>
      </div>
    </header>

    <main id="stories">
      <div class="empty">Loading stories…</div>
    </main>

    <script>
      let isAdmin = localStorage.getItem("isAdmin") === "true";
      let adminPassword = localStorage.getItem("adminPassword");

      const adminBtn = document.getElementById("adminBtn");
      const adminBadge = document.getElementById("adminBadge");

      if (isAdmin) {
        adminBadge.style.display = "inline-block";
        adminBtn.textContent = "Exit admin";
      }

      adminBtn.onclick = async () => {
        if (isAdmin) {
          localStorage.removeItem("isAdmin");
          localStorage.removeItem("adminPassword");
          isAdmin = false;
          adminPassword = null;
          adminBadge.style.display = "none";
          adminBtn.textContent = "Admin";
          loadStories();
          return;
        }

        const password = prompt("Enter admin password:");
        if (!password) return;

        const res = await fetch("/api/admin-check", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ password })
        });

        const data = await res.json();
        if (!data.isAdmin) return alert("Incorrect password");

        isAdmin = true;
        adminPassword = password;
        localStorage.setItem("isAdmin", "true");
        localStorage.setItem("adminPassword", password);
        adminBadge.style.display = "inline-block";
        adminBtn.textContent = "Exit admin";
        loadStories();
      };

      async function adminAction(action, id) {
        await fetch("/api/stories", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ action, id, password: adminPassword })
        });
        loadStories();
      }

      function loadStories() {
        fetch("/api/stories")
          .then(res => res.json())
          .then(stories => {
            const container = document.getElementById("stories");
            const visible = isAdmin ? stories : stories.filter(s => !s.hidden);

            if (!visible.length) {
              container.innerHTML =
                '<div class="empty">No stories yet.</div>';
              return;
            }

            container.innerHTML = visible.map(story => `
              <div class="story ${story.hidden ? "hidden" : ""}">
                <div class="meta">
                  <span class="name">${story.name}</span>
                  <span class="timestamp">· ${new Date(story.createdAt).toLocaleString()}</span>
                </div>

                ${story.hidden ? '<div class="hidden-label">Hidden</div>' : ""}

                <div class="text">${story.text}</div>

                ${
                  story.mediaUrl
                    ? `<div class="media">${
                        story.mediaType.startsWith("image")
                          ? `<img src="${story.mediaUrl}">`
                          : story.mediaType.startsWith("video")
                          ? `<video src="${story.mediaUrl}" controls></video>`
                          : `<audio src="${story.mediaUrl}" controls></audio>`
                      }</div>`
                    : ""
                }

                <div class="story-footer">
                  <a class="view" href="/stories/${story.id}">View story →</a>

                  ${
                    isAdmin
                      ? `<div class="admin-actions">
                          <button class="hide-btn" data-hide="${story.id}">
                            ${story.hidden ? "Unhide" : "Hide"}
                          </button>
                          <button class="delete-btn" data-delete="${story.id}">
                            Delete
                          </button>
                        </div>`
                      : ""
                  }
                </div>
              </div>
            `).join("");

            document.querySelectorAll("[data-hide]").forEach(btn =>
              btn.onclick = e => {
                e.preventDefault();
                adminAction("hide", btn.dataset.hide);
              }
            );

            document.querySelectorAll("[data-delete]").forEach(btn =>
              btn.onclick = e => {
                e.preventDefault();
                if (confirm("Delete this story permanently?")) {
                  adminAction("delete", btn.dataset.delete);
                }
              }
            );
          });
      }

      loadStories();
    </script>
  </body>
</html>
