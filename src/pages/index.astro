<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Only Scrubs</title>

  <style>
    body {
      max-width: 1000px;
      margin: auto;
      font-family: system-ui, sans-serif;
      background: #f4f6f8;
      padding: 0 16px 40px;
    }

    header {
      text-align: center;
      margin-bottom: 20px;
    }

    header img {
      width: 100%;
      max-height: 260px;
      object-fit: cover;
      border-radius: 0 0 20px 20px;
    }

    header h1 {
      margin: 16px 0 4px;
      font-size: 2.6rem;
    }

    header p {
      color: #555;
    }

    .actions {
      display: flex;
      justify-content: flex-end;
      margin-bottom: 10px;
    }

    button {
      padding: 10px;
      border-radius: 10px;
      border: none;
      background: #2563eb;
      color: white;
      cursor: pointer;
    }

    .admin {
      color: #dc2626;
      font-weight: bold;
      margin-bottom: 10px;
    }

    form {
      background: white;
      padding: 18px;
      border-radius: 18px;
      box-shadow: 0 10px 24px rgba(0,0,0,.08);
    }

    textarea {
      width: 100%;
      height: 110px;
      padding: 12px;
      border-radius: 12px;
      border: 1px solid #ccc;
      resize: vertical;
    }

    .hint {
      font-size: .85rem;
      color: #666;
      margin: 6px 0;
    }

    #preview img, #preview video {
      max-width: 100%;
      border-radius: 12px;
      margin-top: 10px;
    }

    .file-preview {
      background: #eef2f7;
      padding: 10px;
      border-radius: 10px;
      font-size: .9rem;
    }

    #stories {
      margin-top: 30px;
      display: flex;
      flex-direction: column;
      gap: 22px;
    }

    .story {
      background: white;
      padding: 18px;
      border-radius: 18px;
      box-shadow: 0 10px 24px rgba(0,0,0,.08);
    }

    .comment {
      background: #f1f5f9;
      padding: 8px 10px;
      border-radius: 8px;
      margin-top: 6px;
      font-size: .9rem;
    }

    .comment-form {
      display: flex;
      gap: 8px;
      margin-top: 10px;
    }

    .comment-form input {
      flex: 1;
      padding: 8px;
      border-radius: 8px;
      border: 1px solid #ccc;
    }

    @media (max-width: 600px) {
      button {
        width: 100%;
      }
      .comment-form {
        flex-direction: column;
      }
    }
  </style>
</head>

<body>
<header>
  <img src="https://images.unsplash.com/photo-1580281657521-6e7b1e1b99b6?auto=format&fit=crop&w=1600&q=80">
  <h1>Only Scrubs</h1>
  <p>A safe, anonymous space for healthcare stories</p>
</header>

<div class="actions">
  <button id="adminBtn">Admin login</button>
</div>

<p id="adminStatus"></p>

<form id="storyForm">
  <textarea name="text" placeholder="Share your story anonymously..." required></textarea>
  <input type="file" name="file" />
  <div class="hint">Attach any file (optional)</div>
  <div id="preview"></div>
  <button type="submit">Post story</button>
</form>

<div id="stories"></div>

<script>
  const storiesDiv = document.getElementById("stories");
  const adminBtn = document.getElementById("adminBtn");
  const adminStatus = document.getElementById("adminStatus");
  const fileInput = document.querySelector("input[type=file]");
  const preview = document.getElementById("preview");

  function updateAdminUI() {
    const isAdmin = !!localStorage.getItem("adminPwd");
    adminBtn.textContent = isAdmin ? "Admin logout" : "Admin login";
    adminStatus.textContent = isAdmin ? "Admin mode enabled" : "";
    adminStatus.className = isAdmin ? "admin" : "";
  }

  adminBtn.onclick = () => {
    if (localStorage.getItem("adminPwd")) {
      localStorage.removeItem("adminPwd");
      updateAdminUI();
      loadStories();
      return;
    }
    const pwd = prompt("Admin password");
    if (pwd) {
      localStorage.setItem("adminPwd", pwd);
      updateAdminUI();
      loadStories();
    }
  };

  fileInput.onchange = () => {
    preview.innerHTML = "";
    const f = fileInput.files[0];
    if (!f) return;
    const url = URL.createObjectURL(f);
    if (f.type.startsWith("image")) preview.innerHTML = `<img src="${url}">`;
    else if (f.type.startsWith("video")) preview.innerHTML = `<video controls src="${url}"></video>`;
    else preview.innerHTML = `<div class="file-preview">ðŸ“Ž ${f.name}</div>`;
  };

  document.getElementById("storyForm").onsubmit = async (e) => {
    e.preventDefault();
    const res = await fetch("/api/stories", {
      method: "POST",
      body: new FormData(e.target),
    });
    if (!res.ok) return alert(await res.text());
    e.target.reset();
    preview.innerHTML = "";
    loadStories();
  };

  async function loadStories() {
    const stories = await fetch("/api/stories").then(r => r.json());
    storiesDiv.innerHTML = "";

    stories.reverse().forEach(story => {
      const div = document.createElement("div");
      div.className = "story";

      let media = "";
      if (story.mediaUrl) {
        if (story.mediaType?.startsWith("image")) media = `<img src="${story.mediaUrl}">`;
        else if (story.mediaType?.startsWith("video")) media = `<video controls src="${story.mediaUrl}"></video>`;
        else media = `<div class="file-preview"><a href="${story.mediaUrl}" target="_blank">Download attachment</a></div>`;
      }

      const comments = (story.comments || []).map(c => `<div class="comment">ðŸ’¬ ${c.text}</div>`).join("");

      div.innerHTML = `
        <p>${story.text}</p>
        ${media}
        ${comments}
        <form class="comment-form">
          <input placeholder="Write a commentâ€¦" required />
          <button>Reply</button>
        </form>
        <button>Delete</button>
      `;

      div.querySelector(".comment-form").onsubmit = async e => {
        e.preventDefault();
        const input = e.target.querySelector("input");
        await fetch("/api/stories?comment=1", {
          method: "POST",
          headers: {"Content-Type":"application/json"},
          body: JSON.stringify({ storyId: story.id, text: input.value })
        });
        loadStories();
      };

      div.querySelector("button:last-child").onclick = async () => {
        await fetch("/api/stories", {
          method: "DELETE",
          headers: {"Content-Type":"application/json"},
          body: JSON.stringify({
            id: story.id,
            adminPassword: localStorage.getItem("adminPwd")
          })
        });
        loadStories();
      };

      storiesDiv.appendChild(div);
    });
  }

  updateAdminUI();
  loadStories();
</script>
</body>
</html>
