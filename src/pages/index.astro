<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Only Scrubs</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      body { margin:0; font-family: system-ui, -apple-system, sans-serif; background: #f9fafb; color: #1f2937; }
      
      /* Navbar */
      nav { background: white; padding: 16px 24px; display: flex; justify-content: center; border-bottom: 1px solid #e5e7eb; }
      .container { max-width: 1000px; width: 100%; display: flex; justify-content: space-between; align-items: center; }
      
      .logo { font-weight: 800; color: #1e3a8a; text-decoration: none; font-size: 1.25rem; display: flex; gap: 8px; align-items: center; }
      
      .links { display: flex; align-items: center; gap: 24px; }
      .nav-link { text-decoration: none; color: #4b5563; font-weight: 600; font-size: 0.95rem; transition: color 0.2s; }
      .nav-link:hover { color: #2563eb; }
      
      .admin-btn {
        background: none; border: none; cursor: pointer;
        color: #9ca3af; font-weight: 500; font-size: 0.9rem;
        transition: color 0.2s;
      }
      .admin-btn:hover { color: #1f2937; }
      .admin-btn.active { color: #2563eb; font-weight: 700; }

      /* Hero Section */
      .hero { 
        text-align: center; padding: 120px 20px 100px; 
        background: white;
        background: radial-gradient(circle at top, #eff6ff 0%, #ffffff 80%);
      }
      
      h1 { 
        font-size: 3.5rem; margin: 0 0 24px; color: #111827; letter-spacing: -1px; line-height: 1.1;
      }
      
      p { 
        color: #6b7280; font-size: 1.25rem; max-width: 640px; 
        margin: 0 auto 48px; line-height: 1.6; 
      }
      
      /* Buttons */
      .btn-group { display: flex; gap: 16px; justify-content: center; flex-wrap: wrap; }
      
      .btn { 
        display: inline-flex; align-items: center; justify-content: center;
        padding: 14px 32px; border-radius: 50px; text-decoration: none; 
        font-weight: 700; font-size: 1rem; transition: transform 0.2s, box-shadow 0.2s; 
      }
      .btn:hover { transform: translateY(-2px); }
      
      .btn-primary { 
        background: #2563eb; color: white; 
        box-shadow: 0 4px 14px rgba(37, 99, 235, 0.3); 
      }
      
      .btn-secondary { 
        background: white; color: #1f2937; border: 1px solid #e5e7eb;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
      }
      .btn-secondary:hover { border-color: #d1d5db; background: #f9fafb; }

      @media(max-width: 600px) { h1 { font-size: 2.5rem; } }
    </style>
  </head>
  <body>
    <nav>
      <div class="container">
        <a href="/" class="logo">
           <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.42 4.83a2 2 0 0 0-1.74-.83H5.32a2 2 0 0 0-1.74.83L2 9h20l-1.58-4.17Z"/><path d="M4 9v11a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9"/><path d="M9 9v11"/><path d="M15 9v11"/><path d="M9 9l-1.5-5"/><path d="M15 9l1.5-5"/></svg>
           Only Scrubs
        </a>
        <div class="links">
          <a href="/stories" class="nav-link">Feed</a>
          <a href="/create" class="nav-link">Share</a>
          <button id="adminLogin" class="admin-btn">Admin</button>
        </div>
      </div>
    </nav>

    <div class="hero">
      <h1>The Voice of Healthcare.</h1>
      <p>Anonymous stories from the ward. Vent, laugh, and connect with verified healthcare workers.</p>
      
      <div class="btn-group">
        <a href="/stories" class="btn btn-primary">Read Stories</a>
        <a href="/create" class="btn btn-secondary">Share a Post</a>
      </div>
    </div>

    <script>
      const btn = document.getElementById("adminLogin");
      const isAdmin = localStorage.getItem("isAdmin") === "true";

      if(isAdmin) {
        btn.textContent = "Exit Admin";
        btn.classList.add("active");
      }

      btn.onclick = () => {
        if(isAdmin) {
          if(confirm("Logout?")) { localStorage.clear(); location.reload(); }
        } else {
          const p = prompt("Admin Password:");
          if(p) { localStorage.setItem("isAdmin", "true"); localStorage.setItem("adminPassword", p); location.reload(); }
        }
      }
    </script>
  </body>
</html>
