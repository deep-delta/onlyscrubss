<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Anonymous Stories</title>

    <style>
      body {
        max-width: 700px;
        margin: auto;
        font-family: Arial, sans-serif;
        padding: 20px;
      }

      textarea {
        width: 100%;
        height: 120px;
        margin-bottom: 10px;
      }

      button {
        padding: 8px 12px;
        cursor: pointer;
      }

      .story {
        border-bottom: 1px solid #ddd;
        padding: 15px 0;
      }

      .admin {
        color: red;
        font-weight: bold;
      }

      .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
    </style>
  </head>

  <body>
    <div class="top-bar">
      <h1>Anonymous Stories</h1>
      <button id="adminBtn">Admin login</button>
    </div>

    <p id="adminStatus"></p>

    <form id="storyForm">
      <textarea
        name="text"
        placeholder="Share your story anonymously..."
        required
      ></textarea>
      <button type="submit">Post story</button>
    </form>

    <hr />

    <div id="stories"></div>

    <script>
      let isAdmin = false;

      const adminBtn = document.getElementById("adminBtn");
      const adminStatus = document.getElementById("adminStatus");
      const form = document.getElementById("storyForm");
      const storiesDiv = document.getElementById("stories");

      adminBtn.onclick = () => {
        const pwd = prompt("Enter admin password");
        if (pwd) {
          localStorage.setItem("adminPwd", pwd);
          isAdmin = true;
          adminStatus.textContent = "Admin mode enabled";
          adminStatus.className = "admin";
          loadStories();
        }
      };

      form.onsubmit = async (e) => {
        e.preventDefault();

        const formData = new FormData(form);

        await fetch("/api/stories", {
          method: "POST",
          body: formData,
        });

        form.reset();
        loadStories();
      };

      async function loadStories() {
        const res = await fetch("/api/stories");
        const stories = await res.json();

        storiesDiv.innerHTML = "";

        stories.reverse().forEach((story) => {
          const div = document.createElement("div");
          div.className = "story";

          div.innerHTML = `
            <p>${story.text}</p>
            <button>Delete</button>
          `;

          div.querySelector("button").onclick = async () => {
            await fetch("/api/stories", {
              method: "DELETE",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({
                id: story.id,
                adminPassword: localStorage.getItem("adminPwd"),
              }),
            });

            loadStories();
          };

          storiesDiv.appendChild(div);
        });
      }

      loadStories();
    </script>
  </body>
</html>
