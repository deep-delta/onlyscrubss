<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Anonymous Stories</title>

    <style>
      body {
        max-width: 720px;
        margin: auto;
        font-family: Arial, sans-serif;
        padding: 20px;
      }

      textarea {
        width: 100%;
        height: 120px;
        margin-bottom: 10px;
      }

      input[type="file"] {
        margin-bottom: 10px;
      }

      button {
        padding: 8px 12px;
        cursor: pointer;
      }

      .story {
        border-bottom: 1px solid #ddd;
        padding: 16px 0;
      }

      .story img,
      .story video {
        max-width: 100%;
        margin-top: 10px;
        border-radius: 6px;
      }

      .admin {
        color: red;
        font-weight: bold;
      }

      .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .hint {
        color: #666;
        font-size: 0.9em;
      }
    </style>
  </head>

  <body>
    <div class="top-bar">
      <h1>Anonymous Stories</h1>
      <button id="adminBtn">Admin login</button>
    </div>

    <p id="adminStatus"></p>

    <form id="storyForm">
      <textarea
        name="text"
        placeholder="Share your story anonymously..."
        required
      ></textarea>

      <input
        type="file"
        name="file"
        accept="image/*,video/mp4,video/webm"
      />

      <div class="hint">
        Optional: add one image or video (max 25 MB)
      </div>

      <button type="submit">Post story</button>
    </form>

    <hr />

    <div id="stories"></div>

    <script>
      let isAdmin = false;

      const adminBtn = document.getElementById("adminBtn");
      const adminStatus = document.getElementById("adminStatus");
      const form = document.getElementById("storyForm");
      const storiesDiv = document.getElementById("stories");

      adminBtn.onclick = () => {
        const pwd = prompt("Enter admin password");
        if (pwd) {
          localStorage.setItem("adminPwd", pwd);
          isAdmin = true;
          adminStatus.textContent = "Admin mode enabled";
          adminStatus.className = "admin";
          loadStories();
        }
      };

      form.onsubmit = async (e) => {
        e.preventDefault();

        const formData = new FormData(form);

        const res = await fetch("/api/stories", {
          method: "POST",
          body: formData,
        });

        if (!res.ok) {
          alert(await res.text());
          return;
        }

        form.reset();
        loadStories();
      };

      async function loadStories() {
        const res = await fetch("/api/stories");
        const stories = await res.json();

        storiesDiv.innerHTML = "";

        stories.reverse().forEach((story) => {
          const div = document.createElement("div");
          div.className = "story";

          let mediaHtml = "";
          if (story.mediaUrl) {
            if (story.mediaType.startsWith("image")) {
              mediaHtml = `<img src="${story.mediaUrl}" alt="story media" />`;
            } else if (story.mediaType.startsWith("video")) {
              mediaHtml = `
                <video controls>
                  <source src="${story.mediaUrl}" type="${story.mediaType}" />
                </video>
              `;
            }
          }

          div.innerHTML = `
            <p>${story.text}</p>
            ${mediaHtml}
            <button>Delete</button>
          `;

          div.querySelector("button").onclick = async () => {
            await fetch("/api/stories", {
              method: "DELETE",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({
                id: story.id,
                adminPassword: localStorage.getItem("adminPwd"),
              }),
            });
            loadStories();
          };

          storiesDiv.appendChild(div);
        });
      }

      loadStories();
    </script>
  </body>
</html>
