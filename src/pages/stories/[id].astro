<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Story · Only Scrubs</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <style>
      body {
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        background: #f6f8fa;
        color: #1f2937;
      }

      header {
        background: white;
        border-bottom: 1px solid #e5e7eb;
        padding: 16px 24px;
      }

      main {
        max-width: 760px;
        margin: 40px auto;
        padding: 0 16px;
      }

      .card {
        background: white;
        border-radius: 20px;
        padding: 28px;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.06);
      }

      .meta {
        font-size: 13px;
        color: #6b7280;
        margin-bottom: 10px;
      }

      .name {
        font-weight: 600;
      }

      .text {
        line-height: 1.7;
        white-space: pre-wrap;
        margin: 18px 0;
      }

      .media img,
      .media video {
        max-width: 100%;
        border-radius: 14px;
        margin-top: 18px;
      }

      .media audio {
        width: 100%;
        margin-top: 18px;
      }

      a.back {
        display: inline-block;
        margin-top: 24px;
        font-size: 14px;
        color: #2563eb;
        text-decoration: none;
      }
    </style>
  </head>

  <body>
    <header>
      <a href="/">Only Scrubs</a>
    </header>

    <main>
      <div class="card" id="story">Loading…</div>
      <a class="back" href="/stories">← Back to stories</a>
    </main>

    <script>
      const id = location.pathname.split("/").pop();

      fetch("/api/stories")
        .then(res => res.json())
        .then(stories => {
          const story = stories.find(s => s.id === id);
          if (!story) {
            document.getElementById("story").innerHTML = "Story not found.";
            return;
          }

          document.getElementById("story").innerHTML = `
            <div class="meta">
              <span class="name">${story.name}</span> ·
              ${new Date(story.createdAt).toLocaleString()}
            </div>

            <div class="text">${story.text}</div>

            ${
              story.mediaUrl
                ? `<div class="media">
                    ${
                      story.mediaType.startsWith("image")
                        ? `<img src="${story.mediaUrl}">`
                        : story.mediaType.startsWith("video")
                        ? `<video src="${story.mediaUrl}" controls></video>`
                        : `<audio src="${story.mediaUrl}" controls></audio>`
                    }
                  </div>`
                : ""
            }
          `;
        });
    </script>
  </body>
</html>
