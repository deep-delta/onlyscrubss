---
export const prerender = false;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Story · Only Scrubs</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      body {
        margin: 0;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, sans-serif;
        background: #f3f4f6;
        color: #1f2937;
      }
      nav {
        background: white;
        padding: 14px 20px;
        display: flex;
        align-items: center;
        border-bottom: 1px solid #e5e7eb;
      }
      nav a { text-decoration: none; font-weight: 700; color: #111827; }
      
      main { max-width: 600px; margin: 20px auto; padding: 0 16px; }

      .card {
        background: white;
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.02);
      }

      .meta { color: #6b7280; font-size: 0.9rem; margin-bottom: 12px; }
      .name { font-weight: 600; color: #111827; }

      .text {
        font-size: 1.1rem;
        line-height: 1.6;
        color: #1f2937;
        margin-bottom: 24px;
        white-space: pre-wrap;
      }

      .media-container {
        background: #f9fafb;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid #e5e7eb;
        display: flex;
        justify-content: center;
      }

      .media-container img, .media-container video {
        max-width: 100%;
        max-height: 600px; /* Allow taller images on single view */
        width: auto;
        display: block;
      }

      .back {
        display: block;
        margin-top: 20px;
        text-align: center;
        color: #2563eb;
        text-decoration: none;
        font-weight: 500;
      }
    </style>
  </head>
  <body>
    <nav><a href="/">Only Scrubs</a></nav>
    <main id="content">Loading...</main>
    <script>
      const storyId = location.pathname.split("/").pop();
      const adminPassword = localStorage.getItem("adminPassword");
      const headers = adminPassword ? { "Authorization": `Bearer ${adminPassword}` } : {};

      fetch(`/api/stories?id=${storyId}`, { headers })
        .then(res => res.ok ? res.json() : Promise.reject())
        .then(story => {
          document.getElementById("content").innerHTML = `
            <div class="card">
              <div class="meta"><span class="name">${story.name}</span> · ${new Date(story.createdAt).toLocaleDateString()}</div>
              <div class="text">${story.text}</div>
              ${story.mediaUrl ? `
                <div class="media-container">
                  ${story.mediaType.startsWith("video") 
                    ? `<video src="${story.mediaUrl}" controls playsinline></video>` 
                    : `<img src="${story.mediaUrl}">`}
                </div>` : ""}
            </div>
            <a class="back" href="/stories">← Back to stories</a>
          `;
        })
        .catch(() => document.getElementById("content").innerHTML = "Story not found.");
    </script>
  </body>
</html>
