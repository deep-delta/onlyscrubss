---
export const prerender = false;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Story · Only Scrubs</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <style>
      body {
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        background: #f6f8fa;
        color: #1f2937;
      }

      header {
        background: white;
        border-bottom: 1px solid #e5e7eb;
        padding: 16px 24px;
      }

      header a {
        text-decoration: none;
        color: #111827;
        font-weight: 600;
      }

      main {
        max-width: 760px;
        margin: 40px auto;
        padding: 0 16px;
      }

      .card {
        background: white;
        border-radius: 22px;
        padding: 28px;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.06);
      }

      .meta {
        font-size: 13px;
        color: #6b7280;
        margin-bottom: 12px;
      }

      .name {
        font-weight: 600;
      }

      .text {
        line-height: 1.7;
        white-space: pre-wrap;
        margin: 20px 0;
      }

      .media img,
      .media video {
        max-width: 100%;
        border-radius: 16px;
        margin-top: 20px;
      }

      .media audio {
        width: 100%;
        margin-top: 20px;
      }

      .back {
        display: inline-block;
        margin-top: 26px;
        font-size: 14px;
        color: #2563eb;
        text-decoration: none;
        font-weight: 500;
      }

      .error {
        text-align: center;
        color: #b91c1c;
        padding: 40px 0;
      }
    </style>
  </head>

  <body>
    <header>
      <a href="/">Only Scrubs</a>
    </header>

    <main>
      <div class="card" id="story">Loading story…</div>
      <a class="back" href="/stories">← Back to stories</a>
    </main>

    <script>
      const storyId = location.pathname.split("/").pop();
      const container = document.getElementById("story");

      fetch("/api/stories")
        .then(res => res.json())
        .then(stories => {
          const story = stories.find(s => s.id === storyId);
          if (!story || story.hidden) {
            container.innerHTML = '<div class="error">Story not found.</div>';
            return;
          }

          container.innerHTML = `
            <div class="meta">
              <span class="name">${story.name}</span> ·
              ${new Date(story.createdAt).toLocaleString()}
            </div>
            <div class="text">${story.text}</div>
            ${
              story.mediaUrl
                ? `<div class="media">${
                    story.mediaType.startsWith("image")
                      ? `<img src="${story.mediaUrl}">`
                      : story.mediaType.startsWith("video")
                      ? `<video src="${story.mediaUrl}" controls></video>`
                      : `<audio src="${story.mediaUrl}" controls></audio>`
                  }</div>`
                : ""
            }
          `;
        })
        .catch(() => {
          container.innerHTML = '<div class="error">Failed to load story.</div>';
        });
    </script>
  </body>
</html>
